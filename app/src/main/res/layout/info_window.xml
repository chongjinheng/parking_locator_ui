<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/bg_custom_info">

    <RelativeLayout
        android:layout_width="250dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/info_window_availability"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/app_name"
            />

        <TextView
            android:id="@+id/info_window_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/app_name"
            android:layout_toRightOf="@id/info_window_availability"
            android:layout_toEndOf="@id/info_window_availability"/>


        <TextView
            android:id="@+id/info_window_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/text_black"
            android:layout_below="@id/info_window_title"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="@string/app_name"/>

        <TextView
            android:layout_below="@id/info_window_address"
            android:id="@+id/info_window_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:text="@string/app_name"/>

        <TextView
            android:layout_below="@id/info_window_price"
            android:id="@+id/info_window_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:text="@string/app_name"/>

        <TextView
            android:layout_below="@id/info_window_price"
            android:id="@+id/info_window_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="end"
            android:text="@string/info_window_instruction"/>

    </RelativeLayout>

</LinearLayout>