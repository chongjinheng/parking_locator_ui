<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context=".BaseActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:fab="http://schemas.android.com/apk/res-auto">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/button_locate_vehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_key"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                fab:fab_colorNormal="@color/purple_main"
                fab:fab_colorPressed="@color/purple_light"
                fab:fab_colorRipple="@color/purple_light"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/button_locate_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/button_locate_vehicle"
                android:src="@drawable/ic_gps"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="30dp"
                fab:fab_colorNormal="@color/red_main"
                fab:fab_colorPressed="@color/red_light"
                fab:fab_colorRipple="@color/red_light"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
